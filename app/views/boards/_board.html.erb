<div class="col-sm-12 col-lg-4 mb-3">
  <div id="board-id-1">
    <div class="card">
      <%= image_tag board.board_image_url, class: 'card-img-top', size: '300x200' %>
      <div class="card-body">
        <h4>
          <%= link_to board.title, board_path(board) %>
        </h4>
          <%= render 'crud_menus', board: board if current_user.own?(board) %>
        <ul class="list-inline">
          <li class="list-inline-item"><i class="far fa-user"></i><%= board.user.decorate.full_name %></li>
          <li class="list-inline-item"><i class="far fa-calendar"></i><%= l board.created_at, format: :long %></li>
        </ul>
        <p class="card-text"><%= board.body %></p>
      </div>
    </div>
  </div>
</div>
