<%= form_with model: @board, scope: :board, local: true, class: 'new_board' do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control', rows: '10' %>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
